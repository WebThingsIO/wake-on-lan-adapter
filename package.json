{
  "name": "wake-on-lan-adapter",
  "display_name": "Wake-on-LAN",
  "version": "0.2.0",
  "description": "Wake-on-LAN adapter.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-iot/wake-on-lan-adapter.git"
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "wake-on-lan",
    "wol"
  ],
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-iot/wake-on-lan-adapter/issues"
  },
  "homepage": "https://github.com/mozilla-iot/wake-on-lan-adapter#readme",
  "dependencies": {
    "local-devices": "^2.0.0",
    "ping": "^0.2.3",
    "wol": "^1.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "manifest.json",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "devices": [],
      "checkPing": true
    },
    "schema": {
      "type": "object",
      "required": [
        "devices"
      ],
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "description": "MAC address",
            "type": "string",
            "pattern": "^([0-9a-fA-F]{2}:){5}[0-9a-fA-F]{2}$"
          }
        },
        "checkPing": {
          "type": "boolean",
          "label": "Ping devices",
          "description": "Check if devices respond to ping",
          "default": true
        }
      }
    }
  }
}
